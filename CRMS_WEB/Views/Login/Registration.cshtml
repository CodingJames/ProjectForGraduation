@{
    ViewBag.Title = "Registration";

    if (Session["PRIO"] != null)
    {
        if ((int)Session["PRIO"] == 1)
        {
            Layout = "~/Views/Shared/Template_admin.cshtml";
        }
        else if ((int)Session["PRIO"] == 2)
        {
            Layout = "~/Views/Shared/Template_emp.cshtml";
        }
        else if ((int)Session["PRIO"] == 3)
        {
            Layout = "~/Views/Shared/Template_cust.cshtml";
        }

    }
    else
    {
        Layout = "~/Views/Shared/Template_index.cshtml";
    }
    
}
<div class="wrapper col2">
    <div id="breadcrumb">
        <ul>
            <li class="first">คุณอยู่ที่ </li>
            <li>&#187;</li>
            <li class="current"><a href="">สมัครสมาชิก</a></li>

        </ul>
    </div>
</div>

<div class="wrapper col4">
    <div id="container">
        <div class="panel-default">
            <h1>ข้อมูลสมาชิก</h1>
            <div class="col-lg-12">

                <!--                  Form                    -->
                <form action="~/Login/RegistrationInserting" method="post" class="form-horizontal">

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">Username</label>
                        <div class="col-sm-4">
                            <input type="text" name="username" class="form-control input-sm" value="" onkeypress="return engAndNum(event)" onblur="    isDuplicateUser(this)" placeholder="JAME1234" required>    <!--    Username      -->
                        </div>
                        <div class="col-sm-4">
                            <span id="dupLD"></span>
                            <span id="dupMSG">4 ตัวอักษรขึ้นไป</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-sm-4 control-label">Password</label>
                        <div class="col-sm-4">
                            <input type="password" name="password" class="form-control input-sm" id="password" value="" required>    <!--    Password      -->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">Confirm Password</label>
                        <div class="col-sm-4">
                            <input type="password" class="form-control input-sm" id="conpassword" value="" required>    <!--   Confirm  Password      -->
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">ชื่อ</label>
                        <div class="col-sm-4">
                            <input type="text" name="name" class="form-control input-sm" id="inputEmail3" placeholder="รัฐพล" required>    <!--    ชื่อลูกค้า      -->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">สกุล</label>
                        <div class="col-sm-4">
                            <input type="text" name="lname" class="form-control input-sm" id="inputEmail3" placeholder="ธนครุฑ" required>    <!--    นามสกุล      -->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">เบอร์โทร</label>
                        <div class="col-sm-4">
                            <input type="tel" name="tel" class="form-control input-sm" maxlength="10" onkeypress="return isNumberStr(event,this)" id="inputEmail3" placeholder="0872361601" required>    <!--    เบอร์      -->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">อีเมล</label>
                        <div class="col-sm-6">
                            <input type="email" name="email" class="form-control input-sm" id="inputEmail3" placeholder="Email">    <!--    เมล      -->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">ที่อยู่</label>
                        <div class="col-sm-6">
                            <textarea name="addr" class="form-control input-sm" id="inputEmail3" style="resize:none;" placeholder="131 หมู่ 1 ต ท่าอุเทน อ.ท่าอุเทน จ.นครพนม 48120 " required></textarea>    <!--    ที่อยู่      -->
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            <center>
                                <button type="submit" class="btn btn-default btn-sm" disabled>สมัครสมาชิก </button>  <!--    ปุม submit      -->
                                @*<button type="reset" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-refresh" style="color:deepskyblue;"></i> ล้างข้อมูล</button>  <!--     ปุ่ม รีเซ็ต    -->*@
                            </center>
                        </div>
                    </div>

                </form> <!-- /form      -->
            </div>
        </div>
       
        <div class="clear"></div>
    </div>
</div>
