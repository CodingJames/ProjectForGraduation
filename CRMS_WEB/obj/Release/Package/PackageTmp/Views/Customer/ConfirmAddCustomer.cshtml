@{
    ViewBag.Title = "ConfirmAddCustomer";
    Layout = "~/Views/Shared/Template_admin.cshtml";
}
@{
    ViewBag.Title = "AddCustomer";
    Layout = "~/Views/Shared/Template_admin.cshtml";
}


<script>
    $(document).ready(function () {
        $("#user").addClass("active");

    });

</script>
<div class="wrapper col2">
    <div id="breadcrumb">
        <ul>
            <li class="first">คุณอยู่ที่ </li>
            <li>&#187;</li>
            <li><a>จัดการผู้ใช้</a></li>
            <li>&#187;</li>
            <li><a href="~/Customer/ManageCustomer">การจัดการลูกค้า</a></li>
            <li>&#187;</li>
            <li><a href="javascript:history.back();">เพิ่มข้อมูลลูกค้า</a></li>
            <li>&#187;</li>
            <li class="current"><a>การยืนยัน</a></li>

            <li style="float:right;">
                <button onclick="goto('../User/UserEditing?userID=@Session["ID"]')" data-toggle="tooltip" title="" data-original-title="แก้ไขข้อมูลส่วนตัว" class="btn btn-default btn-xs"><i class="glyphicon glyphicon-cog"></i> </button>
                @if ((int)Session["PRIO"] == 1)
                {
                    <button onclick="goto('/User/ManagerProfile?userID=@Session["ID"]')" data-toggle="tooltip" title="" data-original-title="ข้อมูลโดยละเอียด" class="btn btn-default btn-xs"><i class="glyphicon glyphicon-user"></i> </button>
                }
                else if ((int)Session["PRIO"] == 2)
                {
                    <button  onclick="goto('/User/EmployeeProfile?userID=@Session["ID"]')" data-toggle="tooltip" title="" data-original-title="ข้อมูลโดยละเอียด" class="btn btn-default btn-xs"><i class="glyphicon glyphicon-user"></i> </button>
                }
                <button onclick="window.location='../Login/Logout'" data-toggle="tooltip" title="" data-original-title="ออกจากระบบ" class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-log-out"></i> </button>
            </li>
            <li style="float:right;">
                <label style="margin: 0px 8px 0px 8px; ">
                    @(Session["LEVEL"] + " ")
                    @(Session["NAME"])
                </label>
            </li>
        </ul>
    </div>
</div>
<div class="wrapper col4">
    <div id="container">
        <div id="content">
            <h1>การยืนยันการเพิ่มข้อมูลลูกค้า</h1>
            <div class="col-lg-12">

                <!--                  Form                    -->
                <form action="~/Customer/InsertCustomer" method="post" class="form-horizontal">

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">Username</label>
                        <div class="col-sm-4">
                            <input type="text" name="username" value="@Request.Params["username"]" class="form-control input-sm" id="inputEmail3" readonly>    <!--    Username      -->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-sm-4 control-label">Password</label>
                        <div class="col-sm-4">
                            <input type="password" name="password" value="@Request.Params["password"]" class="form-control input-sm" id="password" readonly>    <!--    Password      -->
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">ชื่อ</label>
                        <div class="col-sm-4">
                            <input type="text" name="name" value="@Request.Params["name"]" class="form-control input-sm" id="inputEmail3" readonly>    <!--    ชื่อลูกค้า      -->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="lname" class="col-sm-4 control-label">สกุล</label>
                        <div class="col-sm-4">
                            <input type="text" name="lname" value="@Request.Params["lname"]" class="form-control input-sm" id="lname" readonly>    <!--    นามสกุล      -->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">เบอร์โทร</label>
                        <div class="col-sm-4">
                            <input type="tel" name="tel" value="@Request.Params["tel"]" class="form-control input-sm" maxlength="10" id="inputEmail3" readonly>    <!--    เบอร์      -->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">อีเมล</label>
                        <div class="col-sm-6">
                            <input type="email" name="email" value="@Request.Params["email"]" class="form-control input-sm" id="inputEmail3" readonly>    <!--    เมล      -->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">ที่อยู่</label>
                        <div class="col-sm-6">
                            <textarea name="addr"  class="form-control input-sm" id="inputEmail3" style="resize:none;" readonly>@Request.Params["addr"]</textarea>    <!--    ที่อยู่      -->
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-sm-12">
                            <center>
                                <button type="submit" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-save" style="color:green;"></i> ยืนยัน</button>  <!--    ปุม submit      -->
                                @*<button type="reset" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-refresh" style="color:deepskyblue;"></i> ล้างข้อมูล</button>*@  <!--     ปุ่ม รีเซ็ต    -->

                            </center>
                        </div>
                    </div>

                </form> <!-- /form      -->
            </div>
        </div>
        <div class="clear"></div>
    </div>
</div>

